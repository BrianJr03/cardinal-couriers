         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label fx:id="receiptSent" layoutX="351.0" layoutY="383.0" onMouseClicked="#launchMainUI" text="Your receipt has been sent!" textFill="#08d248">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
